@model SignatureViewModel;
@{
	ViewData["Title"] = "Signer Embedded Signatures Examples";
}
<div class="container" style="margin-top:30px">
	<div class="row form-group" style="height:600px">
		<div class="col-sm-4">
			<div class="row mt-3">
				<div class="col-sm-12">
					<button id="Sign1" onclick="sign('@Model.embedUrlDigital')" class="btn btn-primary">Click here to sign Digital With Preview</button>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-sm-12">
					<button id="Sign2" onclick="sign('@Model.embedUrlDigital')" class="btn btn-primary">Click here to sign Digital Without Preview</button>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-sm-12">
					<button id="Sign3" onclick="sign('@Model.embedUrlEletronic')" class="btn btn-primary">Click here to sign Electronic With Preview</button>
				</div>
			</div>
			<div class="row mt-3">
				<div class="col-sm-12">
					<button id="Sign4" onclick="sign('@Model.embedUrlEletronic')" class="btn btn-primary">Click here to sign Electronic Without Preview</button>
				</div>
			</div>
		</div>
		<div class="col-sm-8">
			<div id="embed-container" style="height:600px;width:500px;"></div>
		</div>
	</div>
</div>

@section Scripts
	{
	<script>

		$(document).ready(function() {
			 $('#Sign');
		});

		function sign(url) {
			 document.getElementById("Sign1").disabled = true;
			 console.log(url);
			 var widget = new LacunaSignerWidget();
			 widget.on(widget.events.documentSigned, function(e) {
				  alert('Document ' + e.id + ' signed');
				  document.getElementById("Sign1").disabled = false;
			 });
			 widget.render(url, 'embed-container');
		}

		function sign(url) {
			 document.getElementById("Sign2").disabled = true;
			 console.log(url);
			 var widget = new LacunaSignerWidget({ disableDocumentPreview: true });
			 widget.on(widget.events.documentSigned, function(e) {
				  alert('Document ' + e.id + ' signed');
				  document.getElementById("Sign2").disabled = false;
			 });
			 widget.render(url, 'embed-container');
		}

        function sign(url) {
			document.getElementById("Sign3").disabled = true;
			console.log(url);
			var widget = new LacunaSignerWidget();
			widget.on(widget.events.documentSigned, function (e) {
				alert('Document ' + e.id + ' signed');
			});
			widget.render(url,'embed-container');
		}


	</script>
}
